@using Microsoft.Extensions.Options
@using Orneholm.RadioText.Web.Models
@inject Microsoft.ApplicationInsights.AspNetCore.JavaScriptSnippet JavaScriptSnippet
@inject IOptions<GoogleAnalyticsOptions> GoogleAnalyticsOptions
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <base href="/" />

    <!-- CREDITS -->
    <!--

    This site is created and maintained by Peter Örneholm.

    https://twitter.com/PeterOrneholm
    https://peter.orneholm.com/

    Source available at GitHub:
    https://github.com/PeterOrneholm/RadioText.net

    -->
    <!-- Meta -->
    <title>RadioText.net - Making news from Swedish Radio searchable!</title>
    <meta name="author" content="Peter Örneholm (@("@PeterOrneholm"))">
    <meta name="description" content="Making news from Swedish Radio searchable!">

    <!-- Icons -->
    <link rel="apple-touch-icon" sizes="180x180" href="/images/icons/radiotext-180x180.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/images/icons/radiotext-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/images/icons/radiotext-16x16.png">

    <link rel="shortcut icon" href="/favicon.ico">

    <!-- Webapp -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="manifest" href="/manifest.webmanifest">

    <!-- Styles -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.10.1/css/mdb.min.css" rel="stylesheet" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    @if (!string.IsNullOrWhiteSpace(GoogleAnalyticsOptions.Value.GoogleAnalyticsKey))
    {
        <!-- Global site tag (gtag.js) - Google Analytics -->
        <script async src="https://www.googletagmanager.com/gtag/js?id=@(GoogleAnalyticsOptions.Value.GoogleAnalyticsKey)"></script>
        <script>
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());

        gtag('config', '@GoogleAnalyticsOptions.Value.GoogleAnalyticsKey');
        </script>
    }

    @Html.Raw(JavaScriptSnippet.FullScript)
</head>
<body>
    <div class="bg-light">
        <div class="container">
            <header class="rt-header">
                <h1><a href="/"><img src="images/radiotext-logo.svg" class="rt-header-logo" /> RadioText.net</a></h1>
            </header>

            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <footer class="rt-footer">
        <div class="container">
            <div class="row">
                <div class="col-sm-4">
                    <h4>About</h4>
                    <p>
                        This site transcribes news episodes from <a href="https://sverigesradio.se/">Swedish Radio</a> and makes them searchable. It uses <a href="https://www.microsoft.com/cognitive-services">Azure Cognitive Services</a> for Speech-to-Text, Text Analytics and Text-to-Speech.
                    </p>
                    <p>
                        The <a href="https://github.com/PeterOrneholm/RadioText.net">Sourcecode is available at GitHub</a>.
                    </p>
                </div>

                <div class="col-sm-4">
                    <h4>Author</h4>
                    <p>
                        Developed by <a href="https://twitter.com/PeterOrneholm" target="_blank">@@PeterOrneholm</a> as a demo for the session <a href="http://bit.ly/peterorneholm-democratizing-ai">Democratizing AI with Azure Cognitive Services</a>.
                    </p>
                </div>
            </div>
            <p class="rt-footer-sitename">
                RadioText.net
            </p>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
